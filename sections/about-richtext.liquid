{% if section.settings.text != blank %}
<section class="about-jon-section bg-sky">
    <div class="container">
        <div class="about-jon-main">
            <div class="about-jon-content">
                {{ section.settings.text }}
            </div>
        </div>
    </div>
</section>
{% endif %}
{% schema %}
    {
        "name" : "Richtext",
        "settings": [
            {
                "type": "richtext",
                "id": "text",
                "label": "Text",
                "default": "<h2>About johnny crumbo</h2><p>We're more than just a clothing brand - we're on a mission to make a difference. A percentage of every purchase goes towards supporting organizations dedicated to the welfare of cats and dogs. With your help, we can ensure that every pet receives the care and love they deserve.</p>"
            }
        ]
    }
{% endschema %}