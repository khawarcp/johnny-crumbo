<section class="collection-banner-section">
    <div class="collection-banner-bg">
        {% render 'image-snippet', image: section.settings.image, lazyload: 'lazy'  %}
    </div>
    <div class="collection-banner-main">
        <div class="container"> 
            <div class="collection-banner-content">
                {% if section.settings.subheading %}                        
                    <h6>
                        {{ section.settings.subheading }}
                    </h6>
                {% endif %}
                {% if section.settings.heading %}                        
                    <h2>
                        {{- section.settings.heading -}}
                    </h2>
                {% endif %}
                {% render 'anchor-snippet', button_text: section.settings.button_text, button_url: section.settings.button_url, show_arrow: true %}
            </div>
        </div>
    </div>
</section>


{% schema %}
    {
        "name" : "Hero",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Johny Crumbo T-Shirt"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading",
                "default": "T-Shirt"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "header",
                "content": "Button"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text",
                "default": "Buy Now"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button URL"
            }
        ],
        "presets": [
            {
                "name": "Hero"
            }
        ]
    }
{% endschema %}